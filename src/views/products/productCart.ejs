    <body>
      <div class="container">
  
        <div class="row">
          <br>
          <%console.log(JSON.parse(DatosCookie))%>

          <%let array= JSON.parse(DatosCookie) %>
          <%let array2 = array.map(i=>Number(i)) %>
          <%    products.filter(function (el) {                      %>
          <%    return array2.includes(el.id);             %>
          <%    }).map(function(el) {             %>                           %>
  
            <%// console.log(CookieBorrada)%>
          <br>
          <div class="col-sm-12 col-md-12 col-lg-12">
    
            <br>
            <div class="col-sm-8 col-md-8">
  
              <img src="/images/photos/<%= el.image %>" style='height: 250px; width: 250px;' alt=""><br> <br>
              <b>Descripc√≠on:</b> <%=  el.description %> 
              <br>
              <br>
              <b>Precio: $</b> <%=  el.price%> <br>
              
              <br>
              <form id= 'compras' action="/products/incendios" method="POST" >
