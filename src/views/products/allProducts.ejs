<%- include('../partials/head.ejs') %>
<%- include('../partials/header.ejs') %>
<!-- CAMBIAR DESDE ACA -->
<div class="container">
  <div class="row">
    <br>
      <% products.forEach(function (product) { %>
      
        <br>
        <div class="col-sm-12 col-md-12 col-lg-12 prdDet">
                
        <div class="col-sm-4 col-md-4 imgcart">
          <img src="../images/photos/<%= product.image %>" style="width: 200px;height: 200px;">
        </div>
        <br>
        <div class="col-sm-8 col-md-8">
          <br>
          <b>Id:</b> <%= product.id %> <br>
          <b>Categoria:</b> <%= product.prdCategId %> <br>
          <b>Descripcion:</b> <%= product.description %> <br>
          <b>Precio:</b> $<%= product.price %> <br>
        <br>
          <form action="/products/deleteProduct/<%= product.id %>" method="POST">
            <button type="submit">Borrar producto</button>
          </form>
          <br>
        </div>
        </div>
     
      <% }) %>
    
  </div>
</div>

<% - include('../partials/footer.ejs') %>